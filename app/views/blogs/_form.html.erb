<%= form_for @blog do |f| %>

    <p class="form-group">
        <%= f.file_field :image, as: :file, class: "form-control", rows: "10", :required => 'required' %>
    </p>

    <p class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control", :required => 'required' %>
    </p>
    
    <pclass="form-group">
        <%= f.label :body %> <br>
        <%= f.text_area :body, class: "form-control", rows: "10", :required => 'required' %>
    </p>
    
    <p>
        <%= f.submit 'Blog it', :class => 'btn btn-info pull-right' %>
    </p>
<% end %>